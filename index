  <style>
    body {
      font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
      background: #f5f7fb;
      margin: 0;
      padding: 24px;
      color: #1f2937;
    }

    .container {
      max-width: 720px;
      margin: 0 auto;
    }

    h1 {
      margin-bottom: 8px;
    }

    p.subtitle {
      color: #6b7280;
      margin-bottom: 24px;
    }

    .card {
      background: #ffffff;
      border-radius: 12px;
      padding: 20px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.06);
      margin-bottom: 24px;
    }

    input, button {
      width: 100%;
      padding: 12px;
      font-size: 16px;
      margin-top: 8px;
      border-radius: 8px;
      border: 1px solid #d1d5db;
    }

    button {
      background: #2563eb;
      color: #fff;
      border: none;
      cursor: pointer;
      margin-top: 16px;
    }

    button:disabled {
      background: #93c5fd;
      cursor: not-allowed;
    }

    .status {
      margin-top: 16px;
      font-weight: 600;
    }

