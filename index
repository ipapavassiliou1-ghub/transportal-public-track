<body>

  <div class="container">
    <h1>ðŸ“¦ Track your shipment</h1>
    <p class="subtitle">Enter your tracking number to see real-time delivery status</p>

    <div class="card">
      <label for="trackingInput">Tracking number</label>
      <input
        id="trackingInput"
        placeholder="e.g. RR123456789GR"
        autocomplete="off"
      />
      <button id="trackBtn">Track shipment</button>

      <div id="status" class="status"></div>
    </div>

    <div id="results" class="card" style="display:none;">
      <h3>Tracking result</h3>
      <div id="summary"></div>
      <div id="events" class="events"></div>
    </div>
  </div>

  <script>
    const btn = document.getElementById('trackBtn');
    const input = document.getElementById('trackingInput');
    const statusEl = document.getElementById('status');
    const resultsEl = document.getElementById('results');
    const summaryEl = document.getElementById('summary');
    const eventsEl = document.getElementById('events');

    btn.addEventListener('click', async () => {
      const tracking = input.value.trim();

      if (!tracking) {
        statusEl.textContent = 'Please enter a tracking number.';
        statusEl.className = 'status error';
        return;
      }

      btn.disabled = true;
      statusEl.textContent = 'Tracking in progressâ€¦';
      statusEl.className = 'status';
      resultsEl.style.display = 'none';

      try {
        const res = await fetch('https://track.transportal.gr/webhook/track-mvp', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            tracking: tracking,
            courier: 'AUTO'
          })
        });

        const data = await res.json();
        console.log('API response:', data);

        if (!data || !data.tracking) {
          throw new Error('Invalid response');
        }

        statusEl.textContent = `Status: ${data.status || 'unknown'}`;
        statusEl.className = 'status';

        summaryEl.innerHTML = `
          <p><strong>Tracking:</strong> ${data.tracking}</p>
          <p><strong>Courier:</strong> ${data.courier || 'Unknown'}</p>
          <p><strong>Source:</strong> ${data.source || 'API'}</p>
        `;

        eventsEl.innerHTML = '';

        if (!data.events || data.events.length === 0) {
          eventsEl.innerHTML = '<p>No tracking events available yet.</p>';
        } else {
          data.events.forEach(ev => {
            const div = document.createElement('div');
            div.className = 'event';
            div.innerHTML = `
              <div class="date">${ev.datetime || ''}</div>
              <div class="text">${ev.description || ev.status}</div>
            `;
            eventsEl.appendChild(div);
          });
        }

        resultsEl.style.display = 'block';

      } catch (err) {
        console.error(err);
        statusEl.textContent = 'Failed to retrieve tracking data.';
        statusEl.className = 'status error';
      } finally {
        btn.disabled = false;
      }
    });
  </script>

</body>
</html>
